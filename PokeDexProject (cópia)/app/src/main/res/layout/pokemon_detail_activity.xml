<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pokemon_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:paddingBottom="24dp"
        android:text="@string/pokemon1_name"
        android:textAlignment="center"
        android:textAppearance="?attr/textAppearanceHeadline3" />

    <ImageView
        android:id="@+id/pokemon_detail_image"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:contentDescription="@string/pokemon_image_content_description"
        app:srcCompat="@drawable/bulbassaur" />

    <TextView
        android:id="@+id/pokemon_detail_stats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:padding="16dp"
        android:text="@string/pokemon1_description" />

    <TextView
        android:id="@+id/pokemon_detail_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/pokemon1_description" />

    <TextView
        android:id="@+id/pokemon_detail_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/pokemon1_description" />

</LinearLayout>

